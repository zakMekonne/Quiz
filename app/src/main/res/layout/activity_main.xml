<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <TextView
        android:id="@+id/questionTxt1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="ጥያቄ እና መልስ?"
        android:background="@color/colorPrimaryDark"
        android:textColor="#393737"
        android:textSize="32sp"
        android:textStyle="bold"

        />



        <LinearLayout
            android:id="@+id/linertxtcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            android:layout_below="@id/questionTxt1"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/txtcardView"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
            <Button
                android:id="@+id/ameharic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:text="አማርኛ"
                android:textColor="#393737"
                android:layout_below="@id/questionTxt"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:textSize="20sp"
        />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/txtcardView2"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:text="English"
                android:textColor="#393737"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:textSize="20sp"
                />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:layout_below="@id/linertxtcard"

        >
        <androidx.cardview.widget.CardView
            android:id="@+id/txtcardView3"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <Button
                android:id="@+id/math"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:text="Math"
                android:textColor="#393737"
                android:layout_below="@id/questionTxt"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:textSize="20sp"
                />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</RelativeLayout>